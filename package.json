{
  "name": "cineflix",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A Netflix-like streaming platform built with React, Vite, and TMDB API",
  "homepage": "https://cineflix.vercel.app",
  "scripts": {
    "dev": "vite",
    "dev:vercel": "vercel dev",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "vercel --prod",
    "server": "node backend/server.js",
    "client": "vite",
    "start": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lucide-react": "^0.445.0",
    "mongoose": "^8.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "gh-pages": "^6.1.1",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "terser": "^5.44.0",
    "vercel": "^48.6.0",
    "vite": "^7.1.9"
  }
